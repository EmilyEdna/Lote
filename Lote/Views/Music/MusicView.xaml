<UserControl x:Class="Lote.Views.Music.MusicView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lote.Views.Music"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:Design="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Behavior="clr-namespace:Lote.Common"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:C="clr-namespace:CalcBinding;assembly=CalcBinding"
             xmlns:S="https://github.com/canton7/Stylet"
             Background="Transparent"
             Width="960"
             Height="728"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Behavior:ContentConverter x:Key="ContentConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <WrapPanel>
            <ComboBox x:Name="comboBox"  
                      BorderThickness="0"
                      Width="50"
                      SelectedIndex="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Design:ColorZoneAssist.Mode="Standard"
                      Design:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesignPaper}"
                      BorderBrush="{DynamicResource MaterialDesignPaper}"  
                      Background="Transparent">
                <ComboBoxItem Content="QQ" Tag="0"/>
                <ComboBoxItem Content="网易" Tag="1"/>
                <ComboBoxItem Content="酷狗" Tag="2"/>
                <ComboBoxItem Content="酷我" Tag="3"/>
                <ComboBoxItem Content="B站" Tag="4"/>
                <ComboBoxItem Content="咪咕" Tag="5"/>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{S:Action SearchType}" CommandParameter="{Binding SelectedItem, ElementName=comboBox}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <hc:SearchBar TextWrapping="Wrap" 
                          BorderThickness="1" 
                          Width="910"
                          Style="{StaticResource Search}"
                          ShowClearButton="True"
                          Command="{S:Action SearchMusic}"
                          CommandParameter="{Binding Text, RelativeSource={RelativeSource Self}}" />
        </WrapPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Rectangle HorizontalAlignment="Center" Height="500" VerticalAlignment="Top" Width="375" RadiusY="10" RadiusX="10">
                    <Rectangle.Fill>
                        <SolidColorBrush Color="White" Opacity="0.4"/>
                    </Rectangle.Fill>
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.3" Direction="300"/>
                    </Rectangle.Effect>
                </Rectangle>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="名称"  FontSize="18" Margin="10,2,2,2" HorizontalAlignment="Left"/>
                    <Label Content="{Binding Count,Converter={StaticResource ContentConverter}, ConverterParameter=3}" FontSize="18" Grid.Column="1" Margin="2" HorizontalAlignment="Left"/>
                </Grid>
                <ListBox x:Name="PlayList" 
                         Margin="10,30,0,0"
                         BorderBrush="{x:Null}" 
                         Background="{x:Null}" 
                         Clip="{StaticResource PlayList}" 
                         ItemsSource="{Binding PlayLists}"
                         Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock HorizontalAlignment="Left" Margin="0">
                                <Run Text="{Binding SongName}" Foreground="Black"/>
                                <Run Text="{Binding SongAlbum,StringFormat=({0})}" Foreground="DimGray" FontSize="8"/>
                                </TextBlock>
                                <TextBlock Grid.Column="1" Text="{Binding SongArtist}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <TabControl  Grid.Row="0" Grid.Column="1"
                    Background="Transparent" 
                    BorderThickness="0" 
                    HorizontalAlignment="Left">
                <TabItem Header="单曲" 
                     Background="Transparent" 
                     BorderThickness="0"
                     BorderBrush="Transparent"
                     Style="{StaticResource TabItemTransparentStyle}">
                </TabItem>
                <TabItem Header="歌单" 
                     Background="Transparent" 
                     BorderBrush="Transparent"
                     BorderThickness="0" 
                     Style="{StaticResource TabItemTransparentStyle}">
                </TabItem>
                <TabItem Header="专辑" 
                     Background="Transparent" 
                     BorderBrush="Transparent"
                     BorderThickness="0" 
                     Style="{StaticResource TabItemTransparentStyle}">
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
