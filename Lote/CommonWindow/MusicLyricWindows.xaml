<Window x:Class="Lote.CommonWindow.MusicLyricWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lote.CommonWindow"
        mc:Ignorable="d"
        Height="130" 
        Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        SnapsToDevicePixels="True"
        Background="Transparent"
        ShowInTaskbar="False" 
        ResizeMode="NoResize">
    <Grid Margin="10" SnapsToDevicePixels="True" >
        <Rectangle HorizontalAlignment="Left" 
                   Height="105" 
                   VerticalAlignment="Top" 
                   Width="780" 
                   RadiusX="10" 
                   RadiusY="10" 
                   Opacity="0.7">
            <Rectangle.Effect>
                <BlurEffect Radius="7"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label x:Name="主" Content="123123" HorizontalAlignment="Left" Height="50" VerticalAlignment="Center" Width="760" VerticalContentAlignment="Center" FontSize="30" Foreground="#FFFF3838" Margin="10,10,0,0">
            <Label.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
            </Label.Effect>
        </Label>
    </Grid>
</Window>
