<Application x:Class="Lote.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="https://github.com/canton7/Stylet"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:Material="clr-namespace:Lote.Style.Themes"
             xmlns:local="clr-namespace:Lote">
    <Application.Resources>
        <s:ApplicationLoader>
            <s:ApplicationLoader.Bootstrapper>
                <local:Bootstrapper/>
            </s:ApplicationLoader.Bootstrapper>

            <s:ApplicationLoader.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
                <Material:MaterialDesignThemesResources/>
                <ResourceDictionary Source="/Resource/SvgResource.xaml"/>
                <ResourceDictionary Source="/Style/MergedStyle.xaml"/>
            </s:ApplicationLoader.MergedDictionaries>
        </s:ApplicationLoader>
    </Application.Resources>
</Application>
