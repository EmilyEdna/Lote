<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:L="clr-namespace:Lote.Override"
                    xmlns:hc="https://handyorg.github.io/handycontrol"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region 最大最小关闭-->
    <Style x:Key="BtnClos" TargetType="Button">
        <Setter Property="Background" Value="#4CFFADF8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Width="18" Height="18" CornerRadius="30" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#FFF9F46F" x:Name="BorderClose">
                        <Path Data="{StaticResource CloseGeometryIcon}" Stretch="Fill" Width="10" Height="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path.Fill>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Gray"/>
                                    <GradientStop Color="#FFF9A207" Offset="0.2"/>
                                    <GradientStop Color="#FF15BEEA" Offset="0.4"/>
                                    <GradientStop Color="#FF00FF4A" Offset="0.5"/>
                                    <GradientStop Color="#FF15BEEA" Offset="0.6"/>
                                    <GradientStop Color="#FFF9A207" Offset="0.8"/>
                                    <GradientStop Color="Gray" Offset="1"/>
                                </LinearGradientBrush>
                            </Path.Fill>
                        </Path>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="BorderClose">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#7FEF15B5" Offset="0"/>
                                        <GradientStop Color="#7FF1B91E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
