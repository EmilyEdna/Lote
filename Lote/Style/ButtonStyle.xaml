    <!--#region 导航按钮-->
    <Style x:Key="BtnNav" TargetType="L:LoteButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="L:LoteButton">
                    <Grid Height="50" x:Name="XGrid">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#7FEFE8C9"/>
                                <GradientStop Color="#7FBCE4DF" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>
                        <Border  Background="Transparent" BorderThickness="0,0,1,0" BorderBrush="#FFFF0080" Grid.Column="0">
                            <Path Data="{TemplateBinding Svg}" Stretch="Fill" Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path.Stroke>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFFF03D3"/>
                                        <GradientStop Color="#FFF9A207" Offset="0.2"/>
                                        <GradientStop Color="#FF15BEEA" Offset="0.4"/>
                                        <GradientStop Color="#FF51EA7D" Offset="0.5"/>
                                        <GradientStop Color="#FF15BEEA" Offset="0.6"/>
                                        <GradientStop Color="#FFF9A207" Offset="0.8"/>
                                        <GradientStop Color="#FFFF03D3" Offset="1"/>
                                    </LinearGradientBrush>
                                </Path.Stroke>
                            </Path>
                        </Border>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock Margin="10,0,0,0" Text="{TemplateBinding Content}"/>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="XGrid">
                                <Setter.Value>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#7FEF15B5" Offset="0"/>
                                        <GradientStop Color="#7FF1B91E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

    <!--#region 查询-->
    <VisualBrush x:Key="Helper" Stretch="None" AlignmentX="Left" Opacity="0.3">
        <VisualBrush.Visual>
            <TextBlock Text="请输入搜索条件" FontFamily="Microsoft YaHei" VerticalAlignment="Center"/>
        </VisualBrush.Visual>
    </VisualBrush>
    <Style x:Key="Search" TargetType="hc:SearchBar" BasedOn="{StaticResource SearchBarBaseStyle}">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="Text" Value="{x:Null}">
                <Setter Property="Background" Value="{StaticResource Helper}"/>
            </Trigger>
            <Trigger Property="Text" Value="">
                <Setter Property="Background" Value="{StaticResource Helper}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--#endregion-->

    <!--#region 彩色按钮-->
    <Style x:Key="Colorful" TargetType="Button">
        <Setter Property="Width" Value="15"/>
        <Setter Property="Height" Value="15"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="2,0,2,0"/>
        <Setter Property="Foreground" Value="{x:Null}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
    </Style>
    <!--#endregion-->

    <!--#region 上下一页章按钮-->
    <Style x:Key="Powerful" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="2,0,2,0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
    </Style>
    <!--#endregion-->
</ResourceDictionary>