<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"           
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Master" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontFamily" Value="/Lote;component/Resource/Assets/#HappyZcool-2016" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Canvas Width="{TemplateBinding Width}" Clip="{StaticResource Canva}">
                        <Image  Source="/Resource/Assets/默认背景.jpg"  RenderOptions.BitmapScalingMode="HighQuality"  Width="1210"   SnapsToDevicePixels="True"  ClipToBounds="True"  Canvas.Left="-5"  Canvas.Top="-5" Stretch="Fill">
                            <Image.Effect>
                                <BlurEffect Radius="15"/>
                            </Image.Effect>
                        </Image>
                        <ContentPresenter />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>